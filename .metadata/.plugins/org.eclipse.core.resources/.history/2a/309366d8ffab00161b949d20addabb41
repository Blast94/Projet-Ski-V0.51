	    return false;
	  }
	  public TypeCours find(int id)
	  {
		  TypeCours typeCours = new TypeCours();      
		  try {
			  ResultSet result = this.connect.createStatement(
					  ResultSet.TYPE_SCROLL_INSENSITIVE,
					  ResultSet.CONCUR_READ_ONLY).executeQuery("SELECT * FROM TypeCours WHERE ID = " + id);
			  if(result.first())
				  cours = new Cours(
						  result.getInt("ID"),
						  result.getString("Sport"),
						  result.getString("CategorieAge"),
						  result.getString("Niveau"),
						  result.getInt("Prix"),
						  result.getInt("EleveMinimum"),
						  result.getInt("EleveMaximum"),
						  result.getInt("AgeMinimum")
						  );         
		  } 
		  catch (SQLException e) {
			  e.printStackTrace();
		  }
		  return cours;
	  }

package Be.Rochez.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.text.DateFormat;
import java.text.SimpleDateFormat;

import Be.Rochez.Classes.Client;
import Be.Rochez.Classes.Personne;

public class PersonneDAO extends DAO<Personne> {
	public PersonneDAO(Connection conn) {
	    super(conn);
	  }
	  public boolean create(Personne obj) {
		try
		{
			DateFormat format = new SimpleDateFormat("dd/MM/yyyy");
			String query = "INSERT INTO PERSONNE (Nom, Prenom, DateNaissance) VALUES (\"" + obj.GetNom() + "\", \"" + obj.GetPrenom() + "\", " + format.parse(obj.GetDateNaissance()) + ")"; 
			PreparedStatement s = this.connect.prepareStatement(query);
			s.execute();
			System.out.println("ajout effectué");
			return true;
		}
		catch(SQLException e)
		{
			System.out.println("erreur");
			return false;
		}
		catch(Exception es)
		{
			return false;
		}
	  }
